{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "outDir": "bin",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "module": "node16",
        "moduleResolution": "node16",
        "sourceMap": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true
    },
    "files": [
        "src/index.ts"
    ]
}
