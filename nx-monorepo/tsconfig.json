{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  }
}
